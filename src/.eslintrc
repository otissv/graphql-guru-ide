{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "ecmaFeatures": {
    "modules": true
  },

  "globals": {
    "process.env": true
  },

  "extends": ["standard", "react-app"],

  "rules": {
    "key-spacing": 0,
    "no-trailing-spaces": 0,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2
      }
    ],
    "padded-blocks": 0,
    "semi": [2, "always"],
    "arrow-parens": 0
  }
}
